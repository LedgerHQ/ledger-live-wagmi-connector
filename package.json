{
  "name": "@ledgerhq/ledger-live-wagmi-connector",
  "author": "Alexandre Chabrolin",
  "version": "0.2.1",
  "license": "MIT",
  "main": "lib/index.js",
  "type": "module",
  "typings": "lib/index.d.ts",
  "files": [
    "/lib"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "clean": "git clean -fdX",
    "changelog": "changeset add",
    "format:check": "prettier --check \"src\"",
    "format:fix": "prettier --write \"src\"",
    "lint": "eslint --cache --ext .ts \"src\"",
    "lint:fix": "eslint --cache --fix --ext .ts \"src\"",
    "dev": "tsc -p prod.tsconfig.json --watch",
    "build": "rm -rf lib/* && tsc -p prod.tsconfig.json",
    "test": "vitest",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "release": "turbo run build lint && changeset publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pnpm lint"
    }
  },
  "size-limit": [
    {
      "path": "lib/index.js",
      "limit": "350 KB"
    }
  ],
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.0",
    "@size-limit/preset-small-lib": "^7.0.8",
    "@tsconfig/node18-strictest": "^1.0.0",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "eslint": "^8.32.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-turbo": "^0.0.6",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "prettier": "^2.8.3",
    "react": "^18.2.0",
    "react-17": "npm:react@^17.0.2",
    "react-dom": "^18.2.0",
    "react-dom-17": "npm:react-dom@^17.0.2",
    "size-limit": "^7.0.8",
    "tslib": "^2.5.0",
    "turbo": "^1.7.0",
    "typescript": "^4.9.4",
    "vitest": "^0.25.8"
  },
  "dependencies": {
    "@ledgerhq/iframe-provider": "^0.4.3",
    "@wagmi/core": "^0.8.19",
    "ethers": "^5.7.2",
    "wagmi": "^0.10.15"
  },
  "packageManager": "pnpm@7.17.1"
}
